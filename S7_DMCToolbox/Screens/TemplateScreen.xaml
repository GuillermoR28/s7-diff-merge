<UserControl x:Class="S7_DMCToolbox.Screens.TemplateScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:screens="clr-namespace:S7_DMCToolbox.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <screens:TemplateScreenViewModel />
    </UserControl.DataContext>
    <StackPanel>
        <Label Content="Status:" />
        <TextBlock Text="{Binding TestMethodStatus}" />
        <Button Content="Test Button 1" Command="{Binding TestButtonCommand}"  />
        <Button Content="Stop" Command="{Binding StopButtonCommand}" Style="{StaticResource DmcRedButtonStyle}" />
    </StackPanel>
</UserControl>
